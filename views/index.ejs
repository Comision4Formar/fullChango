<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<body>
  <%- include('./partials/header') %> 

  <main>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1 class="display-1 text-end">fullChango</h1>
        </div>
        <section class="destacados my-4">
          <div class="row" id="lista-productos">
            <div class="col-8">
              <h2>Productos Destacados</h2>
            </div>
            <div class="col-4">
              <form action="">
                <div class="form-floating">
                  <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                    <option value="default">Default</option>
                    <option value="mayor">Precio de mayor a menor</option>
                    <option value="menor">Precio de menor a mayor</option>
                    <option value="aleatorio">Aleatorio</option>
                  </select>
                  <label for="floatingSelect">Orden</label>
                </div>
              </form>
            </div>
            <% destacados.forEach(destacado => { %>
              <div class="col-12 col-md-4 col-lg-3 my-3">
                <div class="card" style="height: 360px;">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <img src="<%= destacado.image %>" class="card-img-top" alt="...">

                    <h5 class="card-title"><%= destacado.title %> </h5>
                      <h3>$<span><%= destacado.price %></span> </h3>
                
                    <div class="d-flex justify-content-around">
                      <a href="#" class="btn btn-success">+Info</a>
                      <a href="#" class="btn btn-primary btn-add-cart" data-id="<%= destacado.id %>">Añadir</a>
                    </div>
                   
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </section>
        <section class="ofertas my-4">
          <div class="row">
            <div class="col-12">
              <h2>Ofertas Imperdibles</h2>
            </div>
            <% ofertas.forEach(oferta => { %>
              <div class="col-12 col-md-4 col-lg-3 my-3">
                <div class="card" style="height: 480px;">
                  <img src="<%= oferta.image %> " class="card-img-top" alt="...">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title"><%= oferta.title %> </h5>
                    <p class="card-text"><%= oferta.description.substring(0,70) %> </p>
                    <div class="d-flex justify-content-around">
                      <h3>$ <%= oferta.price %> </h3>
                        <span><%= oferta.discount %>% OFF </span>
                    </div>
                
                    <div class="d-flex justify-content-around">
                      <a href="#" class="btn btn-success">+Info</a>
                      <a href="#" class="btn btn-primary">Añadir</a>
                    </div>
                   
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </section>
       
      </div>
    </div>
  </main>
   
  <%- include('./partials/footer') %> 

</body>
</html>